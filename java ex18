public class EvenDigitSum {
    // write your code here
    public static int getEvenDigitSum(int number)
    {
        int sum=0;
        if(number<0)
        return -1;
        else
        {
           while(number!=0)
           {
               int x=number%10;
               if(x%2==0)
               sum+=x;
               number/=10;
           }
           return sum;
        }
    }
}
